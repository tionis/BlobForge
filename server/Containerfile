# Build stage
FROM golang:1.22-alpine AS builder

RUN apk add --no-cache gcc musl-dev

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build with CGO for SQLite
RUN CGO_ENABLED=1 go build -o blobforge .

# Runtime stage
FROM alpine:3.19

RUN apk add --no-cache ca-certificates

WORKDIR /app

COPY --from=builder /app/blobforge .

# Create data directory
RUN mkdir -p /app/data

ENV BLOBFORGE_DB_PATH=/app/data/blobforge.db
ENV BLOBFORGE_PORT=8080

EXPOSE 8080

CMD ["./blobforge"]
